@model IEnumerable<corecrud.Models.Users>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer
@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-success" asp-action="User" asp-route-id="null">@ViewLocalizer["create"]</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@ViewLocalizer["name"]</th>
            <th scope="col">@ViewLocalizer["surname"]</th>
            <th scope="col">@ViewLocalizer["age"]</th>
            <th scope="col">@ViewLocalizer["delete"]</th>
            <th scope="col">@ViewLocalizer["update"]</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">@ViewLocalizer["delete"]</a>
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="New" asp-route-id="@item.Id">@ViewLocalizer["update"]</a>
                </td>
            </tr>
        }



    </tbody>
</table>
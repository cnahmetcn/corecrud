@model IEnumerable<corecrud.Models.Users>
@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-success" asp-action="User" asp-route-id="null">Create</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Age</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>

            @foreach (var item in Model)
            {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="New" asp-route-id="@item.Id">Update</a>
            </td>
        </tr>
            }
       


    </tbody>
</table>